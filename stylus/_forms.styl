.form-horizontal .form-group
  margin-left 0
  margin-right 0


.form-control
  margin-top 40px
  font-weight 700
  font-size 14px
  background-color transparent
  border none
  box-shadow none
  border-radius 0
  border-bottom 1px solid #dce3e8
  padding-left 0
  &:focus
    box-shadow none
    outline none
    border 0 none
    border-bottom 1px solid #dce3e8
    background-color transparent

.ta
  margin-bottom 15px
  resize none
