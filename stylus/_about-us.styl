.our-mission,
.our-vision
  h4
    display inline-block
    font 700 16px 'Raleway'
  p
    color #585858

  img
    opacity 0.7
    width 100%
    max-height 176px
    max-width 263px
    overflow hidden
    background: linear-gradient(150deg, rgba(54, 168, 255, 0.32) 0%, rgba(255, 175, 54, 0.32) 100%);

.our-mission
  img
    float left
    margin-right 50px
  h4
    margin-top 40px

.our-vision
  text-align right
  h4
    margin-top 36px
  img
    float right
    margin-left 50px

.about-us-banner
  text-align center
  margin-bottom 100px
  position relative
  overflow hidden
  min-height 400px
  max-height 345px
  background-image linear-gradient(150deg, rgba(54, 168, 255, 1) 0%, rgba(255, 175, 54, 1) 100%);
  img
    position absolute
    left 0
    top 0
    opacity 0.6
  a
    position relative
    display inline-block
    z-index 10
    margin-top 175px

.margin-right
  margin-right 30px

.clients
  margin-top 100px
.clients-bottom
  margin-bottom 100px

.clients-bottom,
.clients-top
  div
    display flex
    align-items center
    justify-content space-around
    flex-direction row
    width 190px
    height 180px
    border 1px solid #eaeff3
    img

.clients-pagination
  list-style none
  padding 0
  li
    display inline-block
    height 10px
    width 10px
    border-radius 50%
    background-color #00baef
    cursor pointer
    &:hover
      background-color #ffaf36
  .active
    background-color #ffaf36